# Gemfile

source "https://rubygems.org"

# Use a modern version of Jekyll that Chirpy requires
gem "jekyll", "~> 4.3.2"

# Chirpy theme
gem "jekyll-theme-chirpy", "~> 5.4"

# Required dependencies for GitHub Pages
gem "jekyll-sitemap", "~> 1.4"
gem "jekyll-feed", "~> 0.16"

# Markdown support
gem "kramdown", "~> 2.5"
gem "kramdown-parser-gfm", "~> 1.0"

# Optional: for SCSS support
gem "jekyll-sass-converter", "~> 2.2"

# Bundler version
gem "bundler", "~> 2.4"
